<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ReservaFragment"
    android:background="@drawable/fondodos"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".ReservacionesFragment">


        <TextView
            android:id="@+id/reservaciones_TextView"
            android:layout_width="424dp"
            android:layout_height="wrap_content"
            android:background="#FF5722"
            android:fontFamily="sans-serif-medium"
            android:text="Reservaciones"
            android:textAlignment="center"
            android:textColor="#F8F6F6"
            android:textSize="34sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif-medium"
            android:gravity="left"
            android:text="Nombre"
            android:textColor="#6E1D03"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/nombre_EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nombre del que Reserva"
            android:inputType="textPersonName" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif-medium"
            android:gravity="left"
            android:text="Número de Comensales"
            android:textColor="#6E1D03"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/numero_EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="¿Cuántos son?"
            android:inputType="textPersonName" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif-medium"
            android:gravity="left"
            android:text="Fecha de Reservación"
            android:textColor="#6E1D03"
            android:textSize="24sp" />

        <DatePicker
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif-medium"
            android:gravity="left"
            android:text="Hora de la Reservación"
            android:textColor="#6E1D03"
            android:textSize="24sp" />
        <EditText
            android:id="@+id/hora_EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="09:00 am"
            android:inputType="textPersonName" />
        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp"/>

        <Button
            android:id="@+id/reservar_boton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reservar" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="80dp"/>


    </LinearLayout>
</ScrollView>