<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


   <TextView
    android:id="@+id/titulo_text_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:text="Platillo"
    android:textSize="30sp" />

    <ImageView
        android:id="@+id/platillo_image_view"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:src="@drawable/fresas1"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:id="@+id/calificacion_image_view"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:src="@drawable/e5"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_gravity="right" />

    <TextView
        android:id="@+id/tdescripcion_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="left"
        android:text="Descripcion"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/detalles_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="left"
        android:text="descripciÃ³n del platillo"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/talergias_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="left"
        android:text="Alergias"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/dalergias_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="left"
        android:text="especificaciones de alergias"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/precio_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="right"
        android:text="$250"
        android:textSize="30sp" />

</LinearLayout>
</ScrollView>